<h1>Elections#index</h1>
<p>Find me in app/views/elections/index.html.erb</p>

<table>
  <tr>
    <th>Start date</th>
    <th>Duration</th>
  </tr>
  <% @elections.each do |e| %>
    <tr>
      <td><%= link_to e.start, e %></td>
      <td><%= pluralize e.days_to_run, "day" %></td>
    </tr>
  <% end %>
</table>
