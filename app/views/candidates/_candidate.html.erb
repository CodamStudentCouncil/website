<%= turbo_frame_tag candidate do |t| %>
  <h1><%= link_to candidate.username, candidate.profile_url %></h1>
  <%= image_tag candidate.photo_url %>
  <p>
    Tagline:
    <%= candidate.tagline %>
  </p>
  <p>
    Motivation:
    <%= candidate.motivation %>
  </p>
  <p>
    Focus area:
    <%= candidate.focus_area %>
  </p>
  <p>
    <%= link_to "Edit candidate", edit_election_candidate_url(@election, candidate) %>
  </p>
  <p>
    <%= link_to "Remove candidate", election_candidate_url(@election, candidate), "data-turbo-method": :delete %>
  </p>
<% end %>
