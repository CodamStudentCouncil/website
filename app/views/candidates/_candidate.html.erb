<%= turbo_frame_tag candidate do |t| %>
  <div class="grid grid-cols-1 gap-4 mb-4">
    <h1><%= link_to candidate.username, candidate.profile_url %></h1>

    <%= image_tag candidate.photo_url, width: 100, height: 100 %>
    <p>
      Focus area:
      <%= candidate.focus_area %>
    </p>
    <p>
      Tagline:
      <%= candidate.tagline %>
    </p>
    <p>
      Motivation:
      <%= candidate.motivation %>
    </p>
    <p class="space-x-3">
      <%= link_to "Edit candidate", edit_election_candidate_url(@election, candidate), class: "mt-4 px-4 py-2 bg-gray-600 text-white rounded" %>
      <%= link_to "Remove candidate", election_candidate_url(@election, candidate), "data-turbo-method": :delete, class: "mt-4 px-4 py-2 bg-gray-600 text-white rounded" %>
    </p>
  </div>
<% end %>
